<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--Index page for app-->
    <servlet-mapping>
        <servlet-name>GetStartPageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetStartPageServlet</servlet-name>
        <servlet-class>servlets.GetIndexPageServlet</servlet-class>
    </servlet>


    <!--Addition user-->
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/add_user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>servlets.AddUserServlet</servlet-class>
    </servlet>


    <!--Delete user-->
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>servlets.DeleteUserServlet</servlet-class>
    </servlet>


    <!--Update user-->
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>servlets.UpdateUserServlet</servlet-class>
    </servlet>

    <filter>
        <filter-name>EncodingRequestFilter</filter-name>
        <filter-class>servlets.filters.EncodingRequestFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingRequestFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EncodingResponseFilter</filter-name>
        <filter-class>servlets.filters.EncodingResponseFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingResponseFilter</filter-name>
        <url-pattern>/</url-pattern>
    </filter-mapping>

</web-app>